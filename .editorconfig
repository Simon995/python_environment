root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{c,cc,cpp,cxx,h,hh,hpp,hxx}]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{py}]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.{cmake,txt}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
